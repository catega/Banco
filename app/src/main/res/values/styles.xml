<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_interactuar</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="imageButtonStyle" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_opciones</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="textButtons" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>